<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.BuryActivity"
        android:background="@drawable/dimonds_portrait">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_treasure_container">
        
        <android.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#AFB281"
                android:id="@+id/top_menu">
            
            <TextView
                    android:translationX="98dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36dp"
                    android:text="ParkPirates"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:fontFamily="sans-serif-condensed"/>
        </android.widget.Toolbar>
        
        <FrameLayout
                android:layout_width="380dp"
                android:layout_height="470dp"
                android:translationX="15dp"
                android:translationY="15dp"
                android:background="@drawable/rolled_map6">
    
            <ListView
                    android:layout_width="100dp"
                    android:layout_height="365dp"
                    android:translationX="10dp"
                    android:translationY="50dp"/>
    
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/blue_dimond"
                    android:id="@+id/imageView_blue_dimond"
                    android:translationX="121dp"
                    android:translationY="55dp"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/green_dimond"
                    android:id="@+id/imageView_green_dimond"
                    android:translationX="121dp"
                    android:translationY="122dp"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/red_dimond"
                    android:id="@+id/imageView_red_dimond"
                    android:translationX="121dp"
                    android:translationY="190dp"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/purple_dimond"
                    android:id="@+id/imageView_purple_dimond"
                    android:translationX="121dp"
                    android:translationY="255dp"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/gold"
                    android:id="@+id/imageView_gold"
                    android:translationX="111dp"
                    android:translationY="315dp"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/gold_blue_dimond"
                    android:id="@+id/imageView_gold_blue_dimond"
                    android:translationX="111dp"
                    android:translationY="371dp"/>
    
    
            <ListView
                    android:layout_width="100dp"
                    android:layout_height="365dp"
                    android:translationX="186dp"
                    android:translationY="50dp"/>
    
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/gold_green_dimond"
                    android:id="@+id/imageView_gold_green_dimond"
                    android:translationX="290dp"
                    android:translationY="55dp"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/gold_red_dimond"
                    android:id="@+id/imageView_gold_red_dimond"
                    android:translationX="290dp"
                    android:translationY="122dp"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/gold_purple_dimond"
                    android:id="@+id/imageView_gold_purple_dimond"
                    android:translationX="291dp"
                    android:translationY="190dp"/>
            <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/three_dimonds"
                    android:id="@+id/imageView_three_dimonds"
                    android:translationX="300dp"
                    android:translationY="251dp"/>
            <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/four_dimonds"
                    android:id="@+id/imageView_four_dimonds"
                    android:translationX="300dp"
                    android:translationY="320dp"/>
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/gold_four_dimonds"
                    android:id="@+id/imageView_gold_four_dimonds"
                    android:translationX="300dp"
                    android:translationY="375dp"/>
        </FrameLayout>
        
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_treasure_nav"
                android:translationY="25dp">
            
            <Button
                    android:id="@+id/layout_treasure_button_userInfo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/user_info"
                    android:layout_marginLeft="11dp"/>
            
            <Button
                    android:id="@+id/layout_treasure_button_treasureInfo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/treasure_info"
                    android:layout_marginLeft="10dp"/>
            
            <Button
                    android:id="@+id/layout_treasure_button_map"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/map"
                    android:layout_marginLeft="10dp"/>
            
            <Button
                    android:id="@+id/layout_treasure_button_bury"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bury_activity"
                    android:layout_marginLeft="10dp"/>
            
            <Button
                    android:id="@+id/layout_treasure_button_login"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/logout"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>