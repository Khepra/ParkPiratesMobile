<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.MainActivity"
        android:background="@drawable/dimonds_portrait">
    
    <FrameLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/rolled_map6">
    
        <Button
                android:id="@+id/log_in"
                android:onClick="logIn"
                android:text="Login"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:background="@color/colorPrimary"
                android:translationX="25dp"
                android:translationY="270dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="2dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>
    
        <Button
                android:id="@+id/move_map"
                android:text="Map"
                android:onClick="mapActivity"
                android:layout_width="300dp"
                android:layout_height="70dp"                
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:translationX="25dp"
                android:translationY="90dp"/>
    
        <Button
                android:id="@+id/move_userInfo"
                android:text="User Info"
                android:onClick="userInfoActivity"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:buttonCornerRadius="2dp"
                android:translationX="25dp"
                android:translationY="180dp"/>
    </FrameLayout>
</RelativeLayout>
