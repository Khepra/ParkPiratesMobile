<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.LoginActivity"
        android:background="@drawable/dimonds_portrait">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_login_container">
    
    <android.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#AFB281"
            android:id="@+id/top_menu">
        
        <TextView
                android:translationX="98dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="ParkPirates"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:fontFamily="sans-serif-condensed"/>
    </android.widget.Toolbar>
    
    
    <FrameLayout
            android:layout_width="380dp"
            android:layout_height="470dp"
            android:translationX="15dp"
            android:translationY="20dp"
            android:background="@drawable/rolled_map6">
        
        <EditText
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="16dp"
                android:id="@+id/typeName"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"/>
    
        <EditText
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:inputType="textEmailAddress"
                android:text="Email"
                android:textSize="16dp"
                android:id="@+id/typeEmail"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="40dp"/>
    
        <EditText
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:text="Password"
                android:id="@+id/typePassword"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="40dp"/>
        <Button
                android:text="Submit"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/move_userInfo"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:background="#AFB281"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="320dp"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>