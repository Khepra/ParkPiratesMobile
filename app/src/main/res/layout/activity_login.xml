<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.LoginActivity"
        android:background="@drawable/dimonds_portrait">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#AFB281"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
    
    
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="ParkPirates"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    
    <FrameLayout
            android:layout_width="380dp"
            android:layout_height="470dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/rolled_map6">
    
    
        <EditText
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="20dp"
                android:id="@+id/typeName"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="17dp"/>
    
        <EditText
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:inputType="textEmailAddress"
                android:text="Email"
                android:textSize="20dp"
                android:id="@+id/typeEmail"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="17dp"/>
    
        <EditText
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:text="Password"
                android:id="@+id/typePassword"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="17dp"/>
        <Button
                android:text="Submit"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="userInfoActivity"
                android:id="@+id/submit_button"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="#AFB281"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="320dp"/>
        
    </FrameLayout>
</RelativeLayout>