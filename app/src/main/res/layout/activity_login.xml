<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dimonds_portrait"
        tools:context=".controller.LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World - modified!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">


    </LinearLayout>
    
    <Username
            android:text="Type your username"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="389dp"
            android:layout_height="50dp"
            android:ems="20"
            android:id="@+id/username_input"
            tools:layout_editor_absoluteY="315dp"
            android:layout_marginRight="12dp"/>
    
    <Email
            android:text="Enter your email address"
            android:layout_width="389dp"
            android:layout_height="50dp"
            android:ems="20"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/email_input"
            android:hint="youremailaddress@emailcompany.com/is/no/dk"
            tools:layout_editor_absoluteY="375dp"
            android:layout_marginRight="12dp"/>
    
    <Password
            android:layout_width="389dp"
            android:layout_height="50dp"
            android:ems="20"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/password_input"
            android:hint="Must be at least 8 characters and contain at least one number and one capital-letter"
            android:baselineAligned="false"
            tools:layout_editor_absoluteY="438dp"
            android:layout_marginRight="12dp"/>
    
    <Button
            android:text="Submit"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="startGame"
            android:id="@+id/submit_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:borderRadius="6dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:layout_editor_absoluteY="522dp"
            android:layout_marginRight="164dp"/>
    
    <Button
            android:id="@+id/move_map"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Map"
            android:onClick="mapActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:layout_editor_absoluteY="522dp"
            android:layout_marginRight="44dp"/>
    
    <Button
            android:id="@+id/move_userInfo"
            app:layout_constraintRight_toRightOf="parent"
            android:text="User Info"
            android:onClick="userInfoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:layout_editor_absoluteY="522dp"
            android:layout_marginRight="304dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
