<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.BuryActivity"
        android:background="@drawable/dimonds_portrait">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#AFB281"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="ParkPirates"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="380dp"
            android:layout_height="470dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/rolled_map6">
    </FrameLayout>
    <Button
            android:id="@+id/log_in"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logout"
            android:translationX="328dp"
            android:translationY="650dp"/>
    
    <Button
            android:id="@+id/move_bury"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bury_activity"
            android:translationX="247dp"
            android:translationY="650dp"/>
    
    <Button
            android:id="@+id/move_map"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/map"
            android:translationX="165dp"
            android:translationY="650dp"/>
    <Button
            android:id="@+id/move_treasure"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/treasure_info"
            android:translationX="83dp"
            android:translationY="650dp"/>
    
    <Button
            android:id="@+id/move_userInfoActivity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/user_info"
            android:translationX="2dp"
            android:translationY="650dp"/>
</RelativeLayout>